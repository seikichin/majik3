#include "../path.h"

inherit ROOM;

create_room ()
{
  set_short ("Guardroom");
  set_long (
    "This is the guardroom of Que-Moran. The treepalace is never le"
  + "ft without protection and the protection is as good as the sy"
  + "lvan realm can provide. The guards live here most of their ti"
  + "me never complaining and taking their duty with dedication. A"
  + " small bookscase is filled with different books and opuses. A"
  + " small table, few chairs and a pluffy sofa make the furniture"
  + " of this room. The floor is covered with a soft green rag. Do"
  + "ors lead west and south from here.");

  add_exit ("south", ROOM_PATH + "quegq.c");
  add_exit ("west", ROOM_PATH + "questa2.c");

  set_light (1);

}

// You should REMOVE all lines below this line if you are adding special
// stuff to this file by hand. Otherwise scary things can happen.

query_redit ()
{
  return 12;
}
