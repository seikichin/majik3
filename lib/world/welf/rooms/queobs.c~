// CODER       : shinael

#include "../path.h"

inherit ROOM;

create_room ()
{
  set_short ("Observatory");
  set_long (
    "You're in a perfectly round room that seems to be an observato"
  + "ry. The whole great domed ceiling is made of glass providing "
  + "an excellent view at the sky and stars. Couple of bookcases a"
  + "nd desks have been placed beside the walls. The floor is cove"
  + "red with astronomical symbols. Short stairs lead east to the "
  + "great library.");

  add_exit ("east", ROOM_PATH + "quelib.c");

  set_outdoors (4);
  set_light (1);

}

// You should REMOVE all lines below this line if you are adding special
// stuff to this file by hand. Otherwise scary things can happen.

query_redit ()
{
  return 12;
}
