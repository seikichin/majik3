#include "../path.h"

inherit ROOM;

create_room ()
{
  set_short ("Long hall");
  set_long (
    "You're standing at the east end of a long hallway. The floor i"
  + "s covered with a long fuzzy green carpet. Few oil lamps on th"
  + "e walls provide light to the room. A large colourstained wind"
  + "ow gives a nice, yet obscure view over theforest in east. You"
  + " can see a similar window at the other end. A door leadsnorth"
  + ".");

  add_exit ("north", ROOM_PATH + "quero4.c");
  add_exit ("west", ROOM_PATH + "queha2.c");

  set_outdoors (1);
  set_light (1);

}

// You should REMOVE all lines below this line if you are adding special
// stuff to this file by hand. Otherwise scary things can happen.

query_redit ()
{
  return 12;
}
