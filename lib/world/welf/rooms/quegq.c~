#include "../path.h"

inherit ROOM;

create_room ()
{
  set_short ("Guards' quarters");
  set_long (
    "The guards of Que-Moran can meditate and reverie here without "
  + "any disturbance. The floor is covered with a comfortable soft"
  + " carpet and the walls are full of paintings describing the hi"
  + "story of Sol'daran. A large green glasswindow provides an all"
  + "uring view over the sylvan realm in south. A door leads north"
  + ".");

  add_exit ("north", ROOM_PATH + "quegua.c");

  set_outdoors (1);
  set_light (1);

}

// You should REMOVE all lines below this line if you are adding special
// stuff to this file by hand. Otherwise scary things can happen.

query_redit ()
{
  return 12;
}
