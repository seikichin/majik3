#include "../path.h"

inherit ROOM;

create_room ()
{
  set_short ("Elegant hall");
  set_long (
    "This hall isn't quite as big as the ones downstairs, but it is"
  + " as elegant as they are. A round polished mahogany table has "
  + "been placed at the center of the hall. Around it has been pla"
  + "ced eight chairs. A softly glowing crystal is hanging from a "
  + "golden chain from the ceiling and provides well enough light "
  + "to the room. Small doorways lead north and south and a door l"
  + "eads west.");

  add_exit ("south", ROOM_PATH + "questa8.c");
  add_exit ("north", ROOM_PATH + "questa7.c");
  add_exit ("west", ROOM_PATH + "quebed.c");

  set_light (1);

}

// You should REMOVE all lines below this line if you are adding special
// stuff to this file by hand. Otherwise scary things can happen.

query_redit ()
{
  return 12;
}
